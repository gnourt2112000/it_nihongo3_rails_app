<p id="notice"><%= notice %></p>

<h1>Game Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Game</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_reviews.each do |game_review| %>
      <tr>
        <td><%= game_review.user_id %></td>
        <td><%= game_review.game_id %></td>
        <td><%= game_review.review %></td>
        <td><%= link_to 'Show', game_review %></td>
        <td><%= link_to 'Edit', edit_game_review_path(game_review) %></td>
        <td><%= link_to 'Destroy', game_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Review', new_game_review_path %>
